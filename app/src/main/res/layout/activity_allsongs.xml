<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allsong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllsongsActivity"
    android:background="@color/background"
    android:paddingTop="25dp"
    android:fitsSystemWindows="true">


    <!-- header -->
    <RelativeLayout
        android:id="@+id/headersong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All songs"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>


    <!-- scrollview -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headersong"
        android:layout_above="@id/footer"
        android:padding="20dp">
        <LinearLayout
            android:id="@+id/itemsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/song1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thấy Chưa"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngọt"
                        android:textSize="25sp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/gray"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




    <!--  bottom  -->
    <include
        android:id="@+id/footer"
        layout="@layout/toolbarbot"/>
</RelativeLayout>